{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "$ref": "#/definitions/element"
  },
  "definitions": {
    "element": {
      "oneOf": [
        {
          "$ref": "#/definitions/headerElement"
        },
        {
          "$ref": "#/definitions/formElement"
        }
      ]
    },
    "headerElement": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "HEADER"
          ]
        },
        "icon": {
          "type": "string"
        },
        "visible-condition": {
          "$ref": "#/definitions/someCondition"
        }
      },
      "additionalProperties": false,
      "required": [
        "title",
        "type"
      ]
    },
    "formElement": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^[A-Z_]+$"
        },
        "data": {
          "$ref": "#/definitions/paramData"
        },
        "alias": {
          "$ref": "#/definitions/alias"
        },
        "required-condition": {
          "$ref": "#/definitions/someCondition"
        },
        "editable-condition": {
          "$ref": "#/definitions/someCondition"
        },
        "visible-condition": {
          "$ref": "#/definitions/someCondition"
        },
        "comment": {
          "type": "string"
        },
        "valid-conditions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/validationRule"
          }
        },
        "clear-triggers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/alias"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "title",
        "type",
        "alias"
      ]
    },
    "paramData": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_]+(\\.{1}[a-zA-Z_]+)*$": {
          "$ref": "#/definitions/paramElement"
        }
      },
      "additionalProperties": false
    },
    "paramElement": {
      "anyOf": [
        {
          "$ref": "#/definitions/paramElementAPI"
        },
        {
          "$ref": "#/definitions/paramElementSource"
        }
      ]
    },
    "paramElementAPI": {
      "type": "object",
      "properties": {
        "param": {
          "type": "string"
        },
        "api": {
          "type": "string"
        },
        "xpath": {
          "type": "string"
        }
      },
      "required": [
        "param",
        "xpath",
        "api"
      ],
      "additionalProperties": false
    },
    "paramElementSource": {
      "type": "object",
      "properties": {
        "param": {
          "type": "string"
        },
        "source": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/sourceElement"
          }
        },
        "default-value": {
          "$ref": "#/definitions/paramValue"
        },
        "xpath": {
          "type": "string"
        }
      },
      "required": [
        "param",
        "xpath"
      ],
      "additionalProperties": false
    },
    "paramValue": {
      "oneOf": [
        {
          "$ref": "#/definitions/scalar"
        },
        {
          "type": "object"
        }
      ]
    },
    "sourceElement": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "value": {
          "$ref": "#/definitions/scalar"
        },
        "visible-condition": {
          "$ref": "#/definitions/someCondition"
        }
      },
      "required": [
        "title",
        "value"
      ],
      "additionalProperties": true
    },
    "someCondition": {
      "oneOf": [
        {
          "$ref": "#/definitions/complexCondition"
        },
        {
          "$ref": "#/definitions/simpleCondition"
        },
        {
          "$ref": "#/definitions/pathValidationCondition"
        },
        {
          "$ref": "#/definitions/explicitCondition"
        }
      ]
    },
    "explicitCondition": {
      "type": "boolean"
    },
    "complexCondition": {
      "type": "object",
      "properties": {
        "$and": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/someCondition"
          },
          "minItems": 1
        },
        "$or": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/someCondition"
          },
          "minItems": 1
        },
        "$not": {
          "$ref": "#/definitions/someCondition"
        }
      },
      "additionalProperties": false,
      "maxProperties": 1,
      "minProperties": 1
    },
    "simpleCondition": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z_]+(\\.{1}[a-zA-Z_]+)*$": {
          "$ref": "#/definitions/scalar"
        }
      }
    },
    "validationRule": {
      "properties": {
        "condition": {
          "$ref": "#/definitions/someCondition"
        },
        "errorMessage": {
          "type": "string"
        }
      },
      "minProperties": 2,
      "additionalProperties": false
    },
    "pathValidationCondition": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "patternProperties": {
        "^[a-zA-Z_]+(\\.{1}[a-zA-Z_]+)*$": {
          "$ref": "#/definitions/pathCondition"
        }
      },
      "additionalProperties": false
    },
    "typeCondition": {
      "type": "string",
      "enum": [
        "integer",
        "@integer",
        "decimal",
        "@decimal"
      ],
      "additionalProperties": false
    },
    "pathConditionOperand": {
      "oneOf": [
        {
          "anyOf": [
            {
              "$ref": "#/definitions/aliasPath"
            },
            {
              "$ref": "#/definitions/scalar"
            }
          ]
        },
        {
          "$ref": "#/definitions/aggregate"
        }
      ]
    },
    "pathCondition": {
      "type": "object",
      "patternProperties": {
        "\\$(gte|lte|gt|lt|eq|regexp)$": {
          "$ref": "#/definitions/pathConditionOperand"
        },
        "\\$in$": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/pathConditionOperand"
          }
        },
        "\\$length$": {
          "$ref": "#/definitions/pathCondition"
        },
        "\\$type$": {
          "$ref": "#/definitions/typeCondition"
        }
      },
      "additionalProperties": false,
      "maxProperties": 1,
      "minProperties": 1
    },
    "aggregate": {
      "type": "object",
      "properties": {
        "$sum": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pathConditionOperand"
          },
          "minItems": 2
        }
      },
      "additionalProperties": false,
      "maxProperties": 1,
      "minProperties": 1
    },
    "aliasPath": {
      "type": "string",
      "pattern": "^[a-zA-Z_]+(\\.{1}[a-zA-Z_]+)*$"
    },
    "alias": {
      "type": "string",
      "pattern": "^[a-zA-Z_]+$"
    },
    "scalar": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        },
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ]
    }
  }
}