  {
    "title": "Тип услуги",
    "type": "LIST",
    "alias": "serviceSubType",
    "data": {
      "singleOf": {
        "param": "serviceSubType",
        "source": [
          {
            "title": "Создание и продвижение сайтов",
            "value": "42",
            "visible-condition": {
              "serviceType.value": "PARENT_ID_1"
            }
          },
          {
            "title": "Настройка интернета и сетей",
            "value": "43",
            "visible-condition": {
              "serviceType.value": "PARENT_ID_1"
            }
          },
          {
            "title": "Изготовление ключей",
            "value": "44",
            "visible-condition": {
              "serviceType.value": "PARENT_ID_2"
            }
          }
